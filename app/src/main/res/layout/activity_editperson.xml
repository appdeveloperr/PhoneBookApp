<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_editperson"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.usmansh.phonebook.editperson">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Name"
        android:textSize="25dp"
        android:id="@+id/namelb"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold" />



    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/namelb"
        android:id="@+id/nameedit"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Phone no"
        android:textSize="25dp"
        android:layout_below="@id/nameedit"
        android:id="@+id/phlb"
        android:textStyle="normal|bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/phlb"
        android:id="@+id/phedit"/>


    <Button
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@id/phedit"
        android:id="@+id/update"
        android:layout_marginLeft="50dp"
        android:text="Update"
        android:layout_marginTop="30dp"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/update"
        android:layout_below="@+id/phedit"
        android:layout_marginLeft="100dp"
        android:text="cancel"
        android:id="@+id/cancell"
        android:layout_marginTop="30dp"/>


</RelativeLayout>
