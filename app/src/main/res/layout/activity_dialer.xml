<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dialer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_weight="6"
    android:orientation="vertical"
    tools:context="com.example.usmansh.phonebook.dialer"
    android:weightSum="1">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/laynum">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/dialnum"
        android:textSize="40dp"
        />

</LinearLayout>





    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:layout_below="@id/laynum"
        android:id="@+id/l1">


        <Button
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:id="@+id/b1"
            android:background="@drawable/dialerbtimg"
            android:textSize="30dp"
            android:text="1"
            />


        <Button
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:id="@+id/b2"
            android:background="@drawable/dialerbtimg"
            android:textSize="30dp"

            android:text="2"/>



        <Button
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:background="@drawable/dialerbtimg"
            android:textSize="30dp"
            android:id="@+id/b3"
            android:text="3"/>



    </LinearLayout>



    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:layout_below="@id/l1"
        android:id="@+id/l2">


        <Button
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:id="@+id/b4"
            android:background="@drawable/dialerbtimg"
            android:textSize="30dp"
            android:text="4"/>


        <Button
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:id="@+id/b5"
            android:background="@drawable/dialerbtimg"
            android:textSize="30dp"
            android:text="5"/>



        <Button
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:id="@+id/b6"
            android:background="@drawable/dialerbtimg"
            android:textSize="30dp"
            android:text="6"/>



    </LinearLayout>



    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:layout_below="@id/l2"
        android:id="@+id/l3"
        >


        <Button
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:id="@+id/b7"
            android:background="@drawable/dialerbtimg"
            android:textSize="30dp"
            android:text="7"/>


        <Button
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:id="@+id/b8"
            android:background="@drawable/dialerbtimg"
            android:textSize="30dp"
            android:text="8"/>



        <Button
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:id="@+id/b9"
            android:background="@drawable/dialerbtimg"
            android:textSize="30dp"
            android:text="9"/>



    </LinearLayout>



    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:layout_below="@id/l3"
        android:id="@+id/l4"
        >


        <Button
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:id="@+id/bstr"
            android:background="@drawable/dialerbtimg"
            android:textSize="30dp"
            android:text="*"/>


        <Button
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:id="@+id/b0"
            android:background="@drawable/dialerbtimg"
            android:textSize="30dp"
            android:text="0"/>



        <Button
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:id="@+id/bhash"
            android:background="@drawable/dialerbtimg"
            android:textSize="30dp"
            android:text="#"/>



    </LinearLayout>




    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >



        <Button
            android:layout_width="75dp"
            android:layout_height="80dp"
            android:text="C"
            android:background="@drawable/dialerbtimg"
            android:textSize="30dp"
            android:id="@+id/btC"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="80dp"
            android:text="CA"
            android:id="@+id/btCA"
            android:background="@drawable/dialerbtimg"
            android:textSize="30dp"
            />


        <Button
            android:layout_width="75dp"
            android:layout_height="80dp"
            android:id="@+id/btcall"
            android:background="@drawable/images"
            android:textSize="30dp" />

        <Button
            android:layout_width="75dp"
            android:layout_height="80dp"
            android:id="@+id/btmsg"
            android:background="@drawable/msgicon"
            android:textSize="30dp"
            />


    </LinearLayout>



</LinearLayout>
