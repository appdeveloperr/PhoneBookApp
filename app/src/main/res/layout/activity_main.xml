<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_weight="3"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.usmansh.phonebook.MainAct">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/firstLayout"
        android:background="#000000"
        android:layout_weight="1"
        android:layout_alignParentTop="true">



        <EditText
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:background="@drawable/srchbar"
            android:id="@+id/SrcText"
            />


        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/SrcText"
            android:id="@+id/AddBt"
            android:background="@drawable/addimg"
            tools:ignore="RtlHardcoded" />



    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:layout_weight="1"
        android:layout_below="@+id/firstLayout"
        android:id="@+id/secondlayout"
        >

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/gridv">

        </ListView>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:layout_below="@+id/secondlayout"
        >


        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/buttondialer"
            android:id="@+id/dialerBt"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:id="@+id/readperm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Read permission" />

    </RelativeLayout>




</LinearLayout>
